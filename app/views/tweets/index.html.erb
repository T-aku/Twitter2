<div class="row rowver2">
  <div class="col-7 index-center">
    <div class="index-tweet">
      <div class="index-tweet-home">
        Home
      </div>
      <div class="index-tweet-content">
        <%= form_with scope: :tweet, url: tweets_path do |f| %>
          <ul class="index-tweet-form">
            <li>
              <i class="fa fa-twitter twitter" aria-hidden="true"></i>
              <%= f.text_field :content, class: "index-tweet-content-component", placeholder: "What's happening?" %>
            </li>
            <li>
              <%= f.submit("Tweet", class: "index-tweet-submit") %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
    <div class="inline">
    </div>
    <% @tweets.each do |tweet| %>
      <div class="tweet-element">
      <% if !tweet.user.image.blank? %>
        <%= image_tag tweet.user.image.url, class: "profilepic" %>
      <% else %>
        <%= image_tag "people.png" %>
      <% end %>
        <div class="tweet-element-right">
          <div class="tweet-username">
            <%= link_to tweet.user.username, user_path(tweet.user), class: 'text-dark' %>
          </div>
          <div class="tweet-series">
            <%= tweet.content %>
          </div>
        </div>
        <div class="floatend"></div>
      </div>
    <% end %>
  </div>
  <div class="col-5 index-right">
    <div class="right-sidebar">
    </div>
  </div>
</div>
