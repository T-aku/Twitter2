<%= form_with model: @tweet do |f| %>
  <div class="tweet-all" align="center">
    <i class="fa fa-twitter twitter" aria-hidden="true"></i>
    <ul class="tweet-form" align="center">
      <li>
        <%= f.text_field :content, class: "tweet-content", placeholder: "What's happening?", autofocus: true %>
      </li>
      <li>
        <%= f.submit("Tweet", class: "tweet-submit") %>
      </li>
    </ul>
  </div>
<% end %>